@page
@model RideBookingModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<!-- Mapbox -->
<script src='https://api.tiles.mapbox.com/mapbox-gl-js/v1.5.0/mapbox-gl.js'></script>
<link href='https://api.tiles.mapbox.com/mapbox-gl-js/v1.5.0/mapbox-gl.css' rel='stylesheet' />

<!-- GeoCoder -->
<script src='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v2.3.0/mapbox-gl-geocoder.min.js'></script>
<link rel='stylesheet' href='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v2.3.0/mapbox-gl-geocoder.css' type='text/css' />

<!-- Direction API -->
<script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.1.0/mapbox-gl-directions.js"></script>
<link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.1.0/mapbox-gl-directions.css">

<!-- Mapbox -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

<div class="row justify-content-center">
        <div id='map' style="height: 500px;"></div> <!-- Set map height explicitly -->
           
</div>


    <div class="row justify-content-center">
        <div class="col-md-6">
            <form class="border p-4 shadow-sm rounded bg-white">
                <h4 class="text-center mb-4">Book Your Ride</h4>

            <!-- Pickup Location -->
            <div class="form-floating input-wrapper mb-4">
                <input type="text" id="pickup-location" class="form-control border-0 border-bottom rounded-0 shadow-none input-line" placeholder="Pickup Location" />
                <label for="pickup-location">Pickup Location</label>
            </div>

            <!-- Drop-off Location -->
            <div class="form-floating input-wrapper mb-4">
                <input type="text" id="dropoff-location" class="form-control border-0 border-bottom rounded-0 shadow-none input-line" placeholder="Drop-off Location" />
                <label for="dropoff-location">Drop-off Location</label>
            </div>

                <!-- Date -->
                <div class="form-floating input-wrapper mb-4">
                    <input type="date" class="form-control border-0 border-bottom rounded-0 shadow-none input-line" />
                    <label>Date</label>
                </div>

                <!-- Time -->
                <div class="form-floating input-wrapper mb-4">
                    <input type="time" class="form-control border-0 border-bottom rounded-0 shadow-none input-line" />
                    <label>Time</label>
                </div>

                <!-- Ride Type -->
                <div class="form-floating input-wrapper mb-4">
                    <select class="form-select border-0 border-bottom rounded-0 shadow-none input-line">
                        <option selected disabled>Select a ride type</option>
                        <option>Standard</option>
                        <option>XL (6-seater)</option>
                        <option>Motorbike</option>
                    </select>
                    <label>Ride Type</label>
                </div>

                <!-- Special Instructions -->
                <div class="form-floating input-wrapper mb-4">
                    <textarea class="form-control border-0 border-bottom rounded-0 shadow-none input-line" placeholder="Special Instructions" style="height: 100px"></textarea>
                    <label>Special Instructions (Optional)</label>
                </div>

                <button type="button" class="w-100 btn btn-dark btn-lg">Book Ride</button>
            </form>
        </div>
    </div>

    <style>
        .input-line:focus {
            border-color: #007bff;
            box-shadow: none;
        }

        .input-wrapper label {
            font-size: 0.875rem;
        }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select:focus ~ label,
        .form-floating > .form-select:not(:placeholder-shown) ~ label {
            opacity: 1;
            transform: scale(0.85) translateY(-0.8rem) translateX(0.15rem);
        }

        form {
            background-color: #fff;
        }
    </style>

<script src="~/js/map.js"></script>
